<% if logged_in? %>
  <p>ログイン完了ユーザ： <%= current_user.name %></p>
  <h2>タスク一覧</h2>
<ul>
    <% @tasks.each do |task| %>
    <li><%= link_to task.id, task %><%= task.content %> &gt; <%= task.status %></li>
    <% end %>
</ul>

<%= link_to '新規タスクの作成', new_task_path %>
<% else %>
  <h1>Welcome to the tasklists</h1>
  <%= link_to 'Sign up now!', signup_path %>
<% end %> 
